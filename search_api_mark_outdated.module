use Drupal\Core\Entity\ContentEntityInterface;
use Drupal\Core\Entity\EntityInterface;
use Drupal\search_api\IndexInterface;
use Drupal\search_api\Plugin\search_api\datasource\ContentEntity;
use Drupal\search_api_mark_outdated\SearchApiManager;

/**
 * Implements hook_entity_update().
 */
function search_api_mark_outdated_entity_update(EntityInterface $entity) {
  // Check if the entity is a content entity.
  if (!($entity instanceof ContentEntityInterface) || $entity->search_api_skip_tracking) {
    return;
  }

  $indexes = ContentEntity::getIndexesForEntity($entity);
  if (!$indexes) {
    return;
  }

  \Drupal::service('class_resolver')
    ->getInstanceFromDefinition(SearchApiManager::class)
    ->entityUpdate($indexes, $entity);
}

/**
 * Implements function hook_search_api_items_indexed().
 */
function search_api_mark_outdated_search_api_items_indexed(IndexInterface $index, array $item_ids) {
  \Drupal::service('class_resolver')
    ->getInstanceFromDefinition(SearchApiManager::class)
    ->itemsIndexed($index, $item_ids);
}
